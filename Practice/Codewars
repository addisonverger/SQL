--Is it a palindrome?

SELECT 
  str,
  CASE
    WHEN LOWER(str) = REVERSE(LOWER(str)) THEN true
    ELSE false
  END AS res
FROM ispalindrome

--String repeat

SELECT s, n, REPEAT(s, n) AS res
FROM repeatstr

--Remove exclamation marks

SELECT s, REPLACE(s, '!', '') AS res
FROM removeexclamationmarks

